<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:layout_gravity="center" >

    <TextView

        android:id="@+id/visor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hello_world"
        android:textSize="20sp"
        android:gravity="right"
        
         />

    <LinearLayout
        android:id="@+id/botoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="0dp"
        android:paddingRight="0dp" 
        android:gravity="center"
        >

        <Button
            android:id="@+id/mc"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="MC" />

        <Button
            android:id="@+id/mr"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="MR" />

        <Button
            android:id="@+id/ms"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="MS" />

        <Button
            android:id="@+id/memoriamais"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="M+" />

        <Button
            android:id="@+id/memoriamenos"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="M-" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/botoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="0dp"
        android:paddingRight="0dp" 
        android:gravity="center"
        >

        <Button
            android:id="@+id/apagar"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="CLS"
            />

        <Button
            android:id="@+id/limpartudo"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="CE" />

        <Button
            android:id="@+id/limpar"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="C" />

        <Button
            android:id="@+id/maisoumenos"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="+/-" />

        <Button
            android:id="@+id/raiz"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="Raiz" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/botoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="0dp"
        android:paddingRight="0dp" 
        android:gravity="center"
        >

        <Button
            android:id="@+id/sete"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="7" />

        <Button
            android:id="@+id/oito"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="8" />

        <Button
            android:id="@+id/nove"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="9" />

        <Button
            android:id="@+id/divisao"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="/" />

        <Button
            android:id="@+id/porcentagem"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="%" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/botoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="0dp"
        android:paddingRight="0dp" 
        android:gravity="center"
        >

        <Button
            android:id="@+id/quatro"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="4" />

        <Button
            android:id="@+id/cinco"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="5" />

        <Button
            android:id="@+id/seis"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="6" />

        <Button
            android:id="@+id/multiplicar"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="x" />

        <Button
            android:id="@+id/fracao"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="1/x" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/botoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="0dp"
        android:paddingRight="0dp" 
        android:gravity="center"
        >

        <Button
            android:id="@+id/um"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="1" />

        <Button
            android:id="@+id/dois"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="2" />

        <Button
            android:id="@+id/tres"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="3" />

        <Button
            android:id="@+id/subtrair"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="-" />

        <Button
            android:id="@+id/e"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="not" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/botoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="0dp"
        android:paddingRight="0dp" 
        android:gravity="center"
        >

        <Button
            android:id="@+id/zero"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="0" />

        <Button
            android:id="@+id/b"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="not" />

        <Button
            android:id="@+id/virgula"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="," />

        <Button
            android:id="@+id/soma"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="+" />

        <Button
            android:id="@+id/igualar"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="=" />
    </LinearLayout>
    
    
    
    
    
</LinearLayout>